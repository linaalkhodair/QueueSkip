<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_shape"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:padding="@dimen/padd_10">

        <ImageView
            android:id="@+id/product_img1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="@dimen/activity_padding_horizontal"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_name1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/product_img1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            />

        <TextView
            android:id="@+id/product_expire1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name1"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/product_img1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp" />

<!--    <Button-->
<!--        android:layout_width="250dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginLeft="250dp"-->
<!--        android:background="@drawable/round_shape_btn"-->
<!--        android:textColor="@color/colorBackground"-->
<!--        android:layout_marginTop="70dp"-->
<!--        android:text="Move To Cart"-->
<!--        android:id="@+id/move_btn"-->
<!--        ></Button>-->

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_shopping_cart_black_24dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="55dp"
            android:id="@+id/move_btn"></ImageView>

        <ImageView
            android:id="@+id/unfav"
            android:layout_width="43dp"
            android:layout_height="33dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_remove_circle_black_24dp"></ImageView>


        <TextView
            android:id="@+id/product_price1"
            android:layout_marginTop="15dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_below="@+id/product_expire1"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp" />



    </RelativeLayout>
</LinearLayout>