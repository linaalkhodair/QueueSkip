<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/history_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white"
        ></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/profile"
        android:background="@drawable/round_shape_btn"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/history"
            android:layout_width="200dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="96dp"
            android:text="History of payments"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/payMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="60dp"
            android:textAlignment="center"
            android:text="Payment method:"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"

            android:src="@drawable/paypalicon"></ImageView>

        <TextView
        android:id="@+id/price1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="60dp"
        android:text="Price 1"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/> </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/payMethod2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="60dp"
            android:textAlignment="center"
            android:text="Payment method:"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/paypalicon"></ImageView>
    <TextView
        android:id="@+id/price2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:text="Price 2"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/> </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/payMethod3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="60dp"
                android:textAlignment="center"
                android:text="Payment method:"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/paypalicon"></ImageView>
    <TextView
        android:id="@+id/price3"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="60dp"
        android:text="Price 3"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/> </LinearLayout>





</LinearLayout>