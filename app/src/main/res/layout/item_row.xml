<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_shape"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:padding="@dimen/padd_10">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginEnd="@dimen/activity_padding_horizontal"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/product_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            />

        <TextView
            android:id="@+id/product_expire"
            android:layout_width="150dp"

            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/product_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/deleteItemAdmin"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_delete_black_24dp"></ImageView>


        <TextView
            android:id="@+id/product_price"
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_below="@+id/product_expire"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp" />






    </RelativeLayout>
</LinearLayout>